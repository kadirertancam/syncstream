# SyncStream Frontend Development Dockerfile
# ===========================================

FROM node:20-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm install

# Copy source
COPY . .

# Expose Vite dev server port
EXPOSE 4080

# Start Vite dev server on port 4080
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "4080"]
